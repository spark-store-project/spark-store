#!/bin/bash

echo "Spark Store Audit script.星火商店审核脚本"


#################检测文件是否存在
if [ $# -eq 0 ];then
echo "没有接收到参数，退出"
echo "用法：$0 deb路径"
exit
fi

if [ ! -f "$1" ]
then
	echo "文件不存在"
	exit 1
fi

if [ "$(id -u)" != "0" ];then
#############################无root权限时
echo "请使用root启动ssaudit"
exit 1
fi

###


DEBPATH=`realpath $1`

echo  ----------------------------------------------------------------------------------
aptss install -yf --reinstall "$DEBPATH"


